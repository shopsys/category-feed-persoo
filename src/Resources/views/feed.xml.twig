{% block begin %}
<?xml version="1.0" encoding="utf-8"?>
<categories>
{% endblock %}

{% block item %}
    <category>
        <category_id>{{ item.id }}</category_id>
        <hierarchy>{{ item.hierarchyIds }}</hierarchy>
        <title><![CDATA[{{ item.title }}]]></title>
        <description><![CDATA[{{ item.description|striptags|replace({"\n": ' '})|trim }}]]></description>
        <link>{{ item.link }}</link>
        <image_link>{{ item.imageLink }}</image_link>
        <hierarchy_text><![CDATA[{{ item.hierarchyText }}]]></hierarchy_text>
    </category>
{% endblock %}

{% block end %}
</categories>
{% endblock %}
